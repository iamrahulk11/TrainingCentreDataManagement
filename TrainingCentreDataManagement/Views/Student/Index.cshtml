@model IEnumerable<TrainingCentreDataManagement.Models.Student>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Student List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Studentid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Batchname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Studentid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Batchname)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Studentid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Studentid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Studentid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
